@model  List<InfoCategory>
@using IPS.Models;
@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>系统登录</title>

    <script src="https://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"></script>
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <link rel="stylesheet" href="css/style.css">
    <style>
        body {
            background: url("/Img/aa.jpg");
            animation-name: myfirst;
            animation-duration: 30s;
            /*变换时间*/
            animation-delay: 6s;
            /*动画开始时间*/
            animation-iteration-count: infinite;
            /*下一周期循环播放*/
            animation-play-state: running;
            /*动画开始运行*/
        }


        @@keyframes myfirst {
            0% {
                background: url("/Img/uu.jpg");
            }


            30% {
                background: url("/Img/ee.jpg")
            }

            60% {
                background: url("/Img/aa.jpg")
            }

            90% {
                background: url("/Img/dd.jpg")
            }

            100% {
                background: url("/Img/zz.jpg")
            }
        }


        .form {
            background: rgba(255,255,255,0.2);
            width: 400px;
            margin: 120px auto;
        }
        /*阴影*/
        .fa {
            display: inline-block;
            top: 27px;
            left: 6px;
            position: relative;
            color: #ccc;
        }

        input[type="text"], input[type="password"] {
            padding-left: 26px;
        }

        .checkbox {
            padding-left: 21px;
        }
    </style>


</head>
<body>

    <div class="container">

        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>信息类别id</th>
                    <th>类型</th>
                   
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (InfoCategory category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.InfoCategory1</td>
                        <td>@category.InfoName</td>
                       
                        <td>@category.State</td>
                        <td>
                            <a href="/InfoCategory/Updata/@category.Id" style="margin-right:5px;">修改</a>
                            <a href="/InfoCategory/Delete/@category.Id" onclick="return confirm('确定要删除这个类别 @category.InfoName 吗？');">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


